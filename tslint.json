{
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "curly": false,
    "class-name": true,
    "semicolon": false,
    "triple-equals": true,
    "no-unexternalized-strings": [
      true,
      {
        "signatures": [
          "localize",
          "nls.localize"
        ],
        "keyIndex": 0,
        "messageIndex": 1
      }
    ],
    "duplicate-imports": true,
    "translation-remind": true
  },
  "defaultSeverity": "warning"
}
